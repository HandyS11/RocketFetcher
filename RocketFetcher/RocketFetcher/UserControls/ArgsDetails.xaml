<UserControl x:Class="RocketFetcher.UserControls.ArgsDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RocketFetcher.UserControls"
             x:Name="root"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    
    <Grid VerticalAlignment="Center">
        <TextBlock Style="{StaticResource itemSpec}"
                   Text="{Binding itemSpecification, ElementName=root}"/>
        <TextBlock Style="{StaticResource itemSpecData}"
                   Text="{Binding itemSpecValue, ElementName=root}"/>
    </Grid>
</UserControl>
